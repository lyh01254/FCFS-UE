{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "CPLEX & C++ build",
			"command": "/usr/bin/clang++",
			"args": [
				"-c",
				"-m64",
				"-O",
				"-fPIC",
				"-fexceptions",
				"-DNDEBUG",
				"-stdlib=libc++",
				"-I/Applications/CPLEX_Studio2211/cplex/include",
				"-I/Applications/CPLEX_Studio2211/concert/include",
				"-I${workspaceFolder}/include",
				"-I${workspaceFolder}/cplex",
				"*.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "CPLEX & C++ object build",
			"command": "/usr/bin/clang++",
			"args": [
				"-c",
				"-m64",
				"-O",
				"-fPIC",
				"-fexceptions",
				"-DNDEBUG",
				"-stdlib=libc++",
				"-I/Applications/CPLEX_Studio2211/cplex/include",
				"-I/Applications/CPLEX_Studio2211/concert/include",
				"-I${workspaceFolder}/include",
				"${fileBasenameNoExtension}.cpp",
				"-o",
				"${workspaceFolder}/objects/${fileBasenameNoExtension}.o"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "CPLEX link",
			"command": "clang++",
			"args": [
				"-m64",
				"-O",
				"-fPIC",
				"-fexceptions",
				"-DNDEBUG",
				"-stdlib=libc++",
				"-std=c++11",
				"-L/Applications/CPLEX_Studio2211/cplex/lib/arm64_osx/static_pic",
				"-L/Applications/CPLEX_Studio2211/concert/lib/arm64_osx/static_pic",
				"${workspaceFolder}/objects/*.o",
				"${fileDirname}/*.o",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}",
				"-lconcert",
				"-lilocplex",
				"-lcplex",
				"-lm",
				"-lpthread",
				"-framework",
				"CoreFoundation",
				"-framework",
				"IOKit"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "CPLEX & C++ build this",
			"command": "/usr/bin/clang++",
			"args": [
				"-c",
				"-m64",
				"-O",
				"-fPIC",
				"-fexceptions",
				"-DNDEBUG",
				"-stdlib=libc++",
				"-std=c++11",
				"-I/Applications/CPLEX_Studio2211/cplex/include",
				"-I/Applications/CPLEX_Studio2211/concert/include",
				"-I${workspaceFolder}/include",
				"${fileBasenameNoExtension}.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "CPLEX link this",
			"command": "clang++",
			"args": [
				"-m64",
				"-O",
				"-fPIC",
				"-fexceptions",
				"-DNDEBUG",
				"-stdlib=libc++",
				"-L/Applications/CPLEX_Studio2211/cplex/lib/arm64_osx/static_pic",
				"-L/Applications/CPLEX_Studio2211/concert/lib/arm64_osx/static_pic",
				"${fileBasenameNoExtension}.o",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}",
				"-lconcert",
				"-lilocplex",
				"-lcplex",
				"-lm",
				"-lpthread",
				"-framework",
				"CoreFoundation",
				"-framework",
				"IOKit"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "MY C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-c",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/objects/${fileBasenameNoExtension}.o",
				"-I${workspaceFolder}/include",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "c++ link this",
			"command": "clang++",
			"args": [
				"${workspaceFolder}/objects/*.o",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}",
			],
			"options": {
				"cwd":  "${fileDirname}"
			},
			"group": "build"
		},
	]
}